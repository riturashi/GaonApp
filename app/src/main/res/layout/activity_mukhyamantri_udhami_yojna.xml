<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MukhyamantriUdhamiYojna">

    <include
        layout="@layout/mytoolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textColor="#0E0E0E"
                android:textSize="15sp"
                android:text="मुख्यमंत्री अनुसूचित जाति/अनुसूचित जनजाति/अति पिछड़ा वर्ग उद्यमी योजना"
                android:layout_marginTop="10dp"
                android:id="@+id/textview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>

            <ImageView
                android:layout_marginTop="10dp"
                android:src="@drawable/udhami"
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="200dp"></ImageView>

            <ImageView
                android:src="@drawable/udhami2"
                android:id="@+id/imageview2"
                android:layout_width="match_parent"
                android:layout_height="200dp"></ImageView>
            <ImageView
                android:src="@drawable/udhami3"
                android:id="@+id/imageview3"
                android:layout_width="match_parent"
                android:layout_height="200dp"></ImageView>
            <ImageView
                android:layout_marginTop="10dp"
                android:src="@drawable/udhami4"
                android:id="@+id/imageview4"
                android:layout_width="match_parent"
                android:layout_height="200dp"></ImageView>
            <ImageView
                android:layout_marginTop="10dp"
                android:src="@drawable/udhami5"
                android:id="@+id/imageview5"
                android:layout_width="match_parent"
                android:layout_height="200dp"></ImageView>


            <Button
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/btnudhmi1"
                android:text="Go to HomePage"
                android:layout_width="200dp"
                android:layout_height="wrap_content"></Button>
            <TextView
                android:textColor="#0C0C0C"
                android:text="@string/text3udhami"
                android:id="@+id/textview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>

            <Button
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/btnudhmi2"
                android:text="Go to LogIn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"></Button>
        </LinearLayout>


    </ScrollView>


</LinearLayout>